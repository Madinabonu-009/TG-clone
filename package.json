{
  "name": "telegram-clone",
  "version": "1.0.0",
  "description": "Telegram clone messaging application",
  "main": "dist/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "ts-node-dev --respawn src/server.ts",
    "dev:client": "cd client && npm run dev",
    "build": "tsc && cd client && npm install && npm run build",
    "start": "node dist/server.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.1",
    "multer": "^2.0.2",
    "socket.io": "^4.7.4",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/pg": "^8.10.9",
    "concurrently": "^8.2.2",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.4.1",
    "pg": "^8.11.3",
    "pg-mem": "^2.8.1",
    "redis": "^4.6.12",
    "socket.io-client": "^4.7.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0"
  }
}
